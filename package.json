{
  "name": "dev-cracks",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"WEB,BACKOFFICE\" -c \"blue,green\" \"npm:dev:web\" \"npm:dev:backoffice\"",
    "dev:web": "npm --prefix web run dev",
    "dev:backoffice": "npm --prefix backoffice run dev",
    "prebuild": "npm run install:all",
    "build": "npm run build:web && npm run build:backoffice",
    "build:web": "npm --prefix web run build",
    "build:backoffice": "npm --prefix backoffice run build",
    "install:all": "npm install && npm --prefix web install && npm --prefix backoffice install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
